@import '../../styles/variables.styl'

.popular-cakes
  margin 2rem 7rem
  .link
    color $dark-gray
    &:hover
      cursor: pointer
      color: $pink

  .item
    margin-bottom 0.5rem

    .category
      margin-left 0.5rem

  .category-items
    clearfix()
    margin 0.25rem 1rem

    .category-item
      float left
      margin 0.5rem

      img
        border 2px solid $dark-gray
        border-radius 4px
        height 9rem
        width 10rem

        &:hover
          border-color $blue

  .item-details
    margin-top 1rem
    text-align center
