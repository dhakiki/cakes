@import '../../styles/variables.styl'

html, body, .root, main, .app-container
  background $light-gray
  font-family 'Arial'
  height 100%
  margin 0

.app-container
  display flex
  flex-direction column
  padding 0

.app-contents
  display flex
  flex-direction column
  flex 1 0 auto
  position relative

.nav
  background $dark-gray
  box-shadow 0 0.1rem 2rem $shadow-gray
  flex none
  font-weight bold
  color $light-gray
  overflow hidden
  padding 0.75rem
  z-index 1

  a
    color $light-gray

.nav-contents
  display flex
  flex-direction row

.nav-title
  flex none
  font-size 1.25rem
  margin 0.5rem

.social-media-nav
  display flex
  margin 0
  padding 0

.baker-header
  display flex
  flex none
  flex-wrap wrap

  .baker-info
    flex-grow 2

    .baker-name
      margin-bottom 0

.nav-controls
  display flex
  flex 1 0 auto
  justify-content flex-end

  ul
    display flex
    flex-direction row
    margin 0

  .error-status
    flex 1 0 auto
    text-align center

li
  list-style-type none
  margin 0.5rem 0.2rem
    

h1
  font-size 4rem

h2
  font-size 3rem
