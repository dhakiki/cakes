@import '../../styles/variables.styl'

html, body, .root, main, .app-container
  font-family 'Arial'
  height 100%
  margin 0

.app-container
  display flex
  flex-direction column
  padding 0

.app-contents
  display flex
  flex 1 0 auto
  flex-direction column
  overflow auto
  position relative

.nav
  clearfix()
  background $pink
  box-shadow 0 0.1rem 2rem $shadow-gray
  flex none
  font-weight bold
  color $theme-white
  padding 0.75rem
  z-index 1

  a
    color $theme-white

.nav-title
  font-size 1.25rem
  float left
  margin 0.5rem

.social-media-nav
  margin 0
  padding 0

.baker-name
  margin-bottom 0

.nav-controls
  float right
  margin 0.75rem

  ul
    margin 0

  .error-status
    text-align center

li
  display inline
  list-style-type none
  margin 0.5rem 0.2rem
    

h1
  font-size 4rem

h2
  font-size 3rem
