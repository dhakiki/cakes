.baker-landing
  display flex
  flex 1 0 auto
  margin 2rem 4rem

.baker-contents
  display flex
  flex 1 0 auto
  flex-direction column

  .baker-header
    display flex
    flex none
    flex-wrap wrap

    .baker-info
      flex-grow 2
      margin-bottom 1.5rem

      .address
        line-height 1.5rem
        margin 1rem 0

    .baker-actions
      align-items center
      flex-basis 300px
      flex-grow 1
      display flex
      opacity 0.7

      .actions
        border 3px solid lightblue
        border-radius 0.75rem
        display flex
        flex 1 0 auto
        padding 1rem
        position relative

        &:before
          background white
          color lightblue
          content 'Actions'
          padding 0.3rem
          position absolute
          top -15px

        .options
          display flex
          flex 1 0 auto
          flex-direction row
          flex-wrap wrap

          .action-item
            border 5px solid white
            background-color black
            flex 1 0 auto
            height 7rem


  .baker-work
    display flex
    flex 1 0 auto

    .recent-imgs
      display flex
      flex 1 0 auto
      flex-direction row
      flex-wrap wrap

      .image-sub
        border 5px solid white
        background-color black
        flex-basis 125px
        height 125px
  
